<div class="main-content">
    <section class="section">
      <div class="section-header">
        <h1>Armadores</h1>
      </div>

<p id="notice"><%= notice %></p>



<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tel</th>
      <th>Agente</th>
      <th>Pais</th>
      <th>Morada</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @armadors.each do |armador| %>
      <tr>
        <td><%= armador.nome %></td>
        <td><%= armador.tel %></td>
        <td><%= armador.agente %></td>
        <td><%= armador.pais %></td>
        <td><%= armador.morada %></td>
        <td><%= armador.status %></td>
        <td><%= link_to 'Ver', armador %></td>
        <td><%= link_to 'Editar', edit_armador_path(armador) %></td>
        <td><%= link_to 'Eliminar', armador, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Armador', new_armador_path %>

</section>
</div>
<br>

