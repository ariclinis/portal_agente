

<section class="section">
      <div class="container mt-5">
            <div class="row">
          <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">


<div class="card card-primary">
              <div class="card-header"><h4>Login</h4>
</div>

<div class="card-body">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email,class:"form-control" , autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password,class:"form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar",class:"btn btn-primary btn-lg btn-block" %>
    </div>
    <%= render "users/shared/links" %>
  <% end %>
</div>
      </div>
     </div>
  </div>
</section>
