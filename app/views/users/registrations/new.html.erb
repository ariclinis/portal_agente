<section class="section">
      <div class="container mt-5">
            <div class="row">
              <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-6 offset-xl-3">
                <div class="card card-primary">
                      <div class="card-header"><h4>Login</h4>
                </div>

            <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>
            <div class="row">
              <div class="field form-group col-6">
                <%= f.label :name %><br />
                <%= f.text_field :name,class:"form-control", autofocus: true %>
              </div>

              <div class="field form-group col-6">
                <%= f.label :bi %><br />
                <%= f.text_field :bi,class:"form-control", autofocus: true %>
              </div>
            </div>

              <div class="field form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email,class:"form-control" , autofocus: true, autocomplete: "email" %>
              </div>
            <div class="row">
              <div class="form-group col-6">
                <%= f.label :password, "Senha" %>
                <% if @minimum_password_length %>
                <em>(minimo <%= @minimum_password_length %> caracteres)</em>
                <% end %><br />
                <%= f.password_field :password,class:"form-control", autocomplete: "new-password" %>
              </div>

               <div class="form-group col-6">
                <%= f.label :password_confirmation, "Confirma a senha" %><br />
                <%= f.password_field :password_confirmation,class:"form-control", autocomplete: "new-password" %>
              </div>
            </div>
              <div class="actions">
                <%= f.submit "Criar uma conta",class:"btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
            <%= render "users/shared/links" %>

            </div>
      </div>
     </div>
  </div>
</section>
